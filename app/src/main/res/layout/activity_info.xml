<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context="persona.lemonlab.com.persona.infoActivity">

    <TextView
        android:id="@+id/main_title_info_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="لن ناخذ من وقتك الكثير"
        android:textColor="@color/white"
        android:textSize="@dimen/main_title_infoActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="ادخل المعلومات التالية:"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/main_text_infoActivity"
        app:layout_constraintEnd_toEndOf="@+id/main_title_info_activity"
        app:layout_constraintStart_toStartOf="@+id/main_title_info_activity"
        app:layout_constraintTop_toBottomOf="@+id/main_title_info_activity" />

    <ImageView
        android:id="@+id/imageview_info_activity"
        android:layout_width="@dimen/image_infoActivity_width"
        android:layout_height="@dimen/image_infoActivity_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:srcCompat="@drawable/vision" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="@dimen/save_btn_width_infoActivity"
        android:layout_height="@dimen/save_btn_height_infoActivity"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_button_selector"
        android:fontFamily="@font/cairo_semibold"
        android:text="حفظ"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/save_btn_text_size_infoActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/username_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="@font/cairo_semibold"
        android:gravity="right"
        android:hint="اسم المستخدم"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white_alpha"
        android:theme="@style/edittext_style"
        app:layout_constraintEnd_toEndOf="@+id/textview"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="@+id/textview"
        app:layout_constraintTop_toBottomOf="@+id/textview" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageview_info_activity"
        app:layout_constraintTop_toBottomOf="@+id/username_edittext">

        <RadioButton
            android:id="@+id/radio_male2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:fontFamily="@font/cairo_semibold"
            android:text="ذكر  "
            android:textColor="@color/white"
            android:textSize="@dimen/male_radio_text_size_infoActivity"
            android:theme="@style/radio_style"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="254dp" />

        <RadioButton
            android:id="@+id/radio_female2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/cairo_semibold"
            android:text="انثى"
            android:textColor="@color/white"
            android:textSize="@dimen/female_radio_text_size_infoActivity"
            android:theme="@style/radio_style"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="254dp" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>

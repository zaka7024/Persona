<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context="persona.lemonlab.com.persona.QuestionActivity">

    <ImageView
        android:id="@+id/info_imageView"
        android:layout_width="@dimen/info_image_QuestionActivity"
        android:layout_height="@dimen/info_image_height_QuestionActivity"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="showDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info_icon" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/total_questions_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/curent_question_textView"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center_horizontal"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="@dimen/total_question_text_size" />

        <TextView
            android:id="@+id/curent_question_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center_horizontal"
            android:text="1/"
            android:textColor="@color/white"
            android:textSize="@dimen/curent_question_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">


        <TextView
            android:id="@+id/question_text_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center_horizontal"
            android:text="هذا مثال لنص قابل للاستبدال تم توليد هذا النص من مولد النص العربي هذا مثال لنص قابل للاستبدال تم توليد هذا النص من مولد النص العربي"
            android:textColor="@color/white"
            android:textSize="@dimen/question_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/a_answer_btn"
                android:layout_width="@dimen/answer_btn_width"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/answer_selector"
                android:elevation="0dp"
                android:fontFamily="@font/cairo_semibold"
                android:onClick="selectAnswer"
                android:scaleX="0.01"
                android:scaleY="0.01"
                android:text="الخيار الاول"
                android:textColor="@color/white"
                android:textSize="@dimen/answer_btn_text_size"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/b_answer_btn"
                android:layout_width="@dimen/answer_btn_width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/a_answer_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/answer_selector"
                android:fontFamily="@font/cairo_semibold"
                android:onClick="selectAnswer"
                android:scaleX="0.01"
                android:scaleY="0.01"
                android:text="الخيار الثاني"
                android:textColor="@color/white"
                android:textSize="@dimen/answer_btn_text_size"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/a_answer_btn" />

            <Button
                android:id="@+id/c_answer_btn"
                android:layout_width="@dimen/answer_btn_width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/a_answer_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/answer_selector"
                android:fontFamily="@font/cairo_semibold"
                android:onClick="selectAnswer"
                android:scaleX="0.01"
                android:scaleY="0.01"
                android:text="الخيار الثالث"
                android:textColor="@color/white"
                android:textSize="@dimen/answer_btn_text_size"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/b_answer_btn" />

            <Button
                android:id="@+id/d_answer_btn"
                android:layout_width="@dimen/answer_btn_width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/a_answer_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/answer_selector"
                android:fontFamily="@font/cairo_semibold"
                android:onClick="selectAnswer"
                android:scaleX="0.01"
                android:scaleY="0.01"
                android:text="الخيار الرابع"
                android:textColor="@color/white"
                android:textSize="@dimen/answer_btn_text_size"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/c_answer_btn" />

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/thx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/love"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="49dp"
            android:fontFamily="@font/cairo_semibold"
            android:text="شكرًا لك"
            android:textColor="@color/white"
            android:textSize="@dimen/thx_text_size"
            android:visibility="invisible" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/love"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:alpha="0"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_fileName="like.json"
            app:lottie_loop="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/show_result_btn"
        android:layout_width="@dimen/result_btn_width"
        android:layout_height="@dimen/result_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:alpha="1"
        android:background="@drawable/rounded_button_selector"
        android:fontFamily="@font/cairo_semibold"
        android:text="النتيجه"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_pvpActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-9769401692194876/5962618134"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent"></com.google.android.gms.ads.AdView>

</android.support.constraint.ConstraintLayout>
